{
    "name": "strix",
    "private": true,
    "version": "0.1.0",
    "description": "STRIX - Security Technical Implementation & Blockchain Audit Platform",
    "main": "dist-electron/main.js",
    "scripts": {
        "start": "npm run dev",
        "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
        "dev:vite": "vite",
        "dev:electron": "wait-on tcp:5174 && tsc -p electron/tsconfig.json && electron .",
        "build": "tsc && vite build && tsc -p electron/tsconfig.json",
        "build:web": "tsc && vite build",
        "preview": "vite preview"
    },
    "dependencies": {
        "@msgpack/msgpack": "^3.1.3",
        "clsx": "^2.1.0",
        "docx": "^9.5.1",
        "framer-motion": "^10.18.0",
        "html2canvas": "^1.4.1",
        "jspdf": "^4.0.0",
        "jspdf-autotable": "^5.0.7",
        "jszip": "^3.10.1",
        "lucide-react": "^0.309.0",
        "msgpack-lite": "^0.1.26",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-markdown": "^10.1.0",
        "reactflow": "^11.11.4",
        "remark-gfm": "^4.0.1",
        "tailwind-merge": "^2.2.0",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@types/crypto-js": "^4.2.2",
        "@types/jszip": "^3.4.0",
        "@types/msgpack-lite": "^0.1.12",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "electron": "^28.1.0",
        "electron-builder": "^24.13.3",
        "postcss": "^8.4.33",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.2.2",
        "vite": "^5.0.8",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.strix.app",
        "productName": "STRIX",
        "directories": {
            "output": "release"
        },
        "win": {
            "target": "nsis",
            "requestedExecutionLevel": "requireAdministrator",
            "icon": "build/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "build/icon.ico",
            "uninstallerIcon": "build/icon.ico"
        },
        "icon": "build/icon.ico"
    }
}