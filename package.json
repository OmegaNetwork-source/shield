{
    "name": "stig-ops",
    "private": true,
    "version": "0.1.0",
    "main": "dist-electron/main.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
        "dev:vite": "vite",
        "dev:electron": "wait-on tcp:5174 && tsc -p electron/tsconfig.json && electron .",
        "build": "tsc && vite build && tsc -p electron/tsconfig.json",
        "build:web": "tsc && vite build",
        "preview": "vite preview"
    },
    "dependencies": {
        "clsx": "^2.1.0",
        "framer-motion": "^10.18.0",
        "html2canvas": "^1.4.1",
        "jszip": "^3.10.1",
        "lucide-react": "^0.309.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwind-merge": "^2.2.0",
        "xlsx": "^0.18.5"
    },
    "devDependencies": {
        "@types/jszip": "^3.4.0",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "electron": "^28.1.0",
        "electron-builder": "^24.13.3",
        "postcss": "^8.4.33",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.2.2",
        "vite": "^5.0.8",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.stigops.app",
        "productName": "STIG Ops",
        "directories": {
            "output": "release"
        },
        "win": {
            "target": "nsis",
            "requestedExecutionLevel": "requireAdministrator"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    }
}